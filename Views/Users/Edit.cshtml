@model InventoryManagment.Web.Models.Entities.User

@if (Model is null)
{
	<p>User not found!</p>
}
else
{
	<form method="post">
		<div class="mt-3">
			<label class="form-label">Id</label>
			<input type="int" class="form-control" asp-for="Id" readonly />
		</div>
		<div class="mt-3">
			<label class="form-label">Name</label>
			<input type="text" class="form-control" asp-for="Name" />
		</div>
		<div class="mt-3">
			<label class="form-label">Email</label>
			<input type="text" class="form-control" asp-for="Email" />
		</div>
		<div class="mt-3">
			<label class="form-label">Department</label>
			@Html.DropDownList("Department", ViewBag.Departments, "--Select Department--", new { @class = "form-control" })
		</div>
		<div class="mt-3">
			<label class="form-label">DateOfEmployment</label>
			<input type="text" class="form-control" asp-for="DateOfEmployment" />
		</div>
		<div class="mt-3">
			<button type="submit" class="btn btn-primary">Save</button>

			<button type="submit" class="btn btn-danger ms3" asp-action="Delete" asp-controller="Users">Delete</button>
		</div>
	</form>
}