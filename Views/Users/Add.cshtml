@model InventoryManagment.Web.Models.AddUserViewModel

<h3>Add new user</h3>

<form method="post">
	<div class="mt-3">
		<label class="form-label">Name</label>
		<input type="text" class="form-control" asp-for="Name" />
	</div>
	<div class="mt-3">
		<label class="form-label">Email</label>
		<input type="text" class="form-control" asp-for="Email" />
	</div>
	<div class="mt-3">
		<label class="form-label">Department</label>
		@Html.DropDownList("Department", ViewBag.Departments, "--Select User--", new { @class = "form-control" })
	</div>
	<div class="mt-3">
		<label class="form-label">Date of employment</label>
		<input type="date" class="form-control" asp-for="DateOfEmployment" />
	</div>
	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>
</form>