@model InventoryManagment.Web.Models.AddHardwareModelViewModel

<h3>Add new model of hardware</h3>

<form method="post">
	<div class="mt-3">
		<label class="form-label">Name</label>
		<input type="text" class="form-control" asp-for="Name" />
	</div>
	<div class="mt-3">
		<label class="form-label">Producer</label>
		@Html.DropDownList("Producer", ViewBag.Producers, "--Select Producer--", new { @class = "form-control" })
	</div>	
	<div class="mt-3">
		<label class="form-label">Category</label>
		<select class="form-control" asp-for="Category">
			<option value="Laptop">Laptop</option>
			<option value="Monitor">Monitor</option>
		</select>
	</div>
	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>
</form>