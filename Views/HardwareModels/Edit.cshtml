@model InventoryManagment.Web.Models.Entities.HardwareModel
@{
	ViewData["Title"] = "Edit Model";
}
@if (Model is null)
{
	<p>Hardware Model not found!</p>
}
else
{
	<form method="post">
		<div class="mt-3">
			<label class="form-label">Id</label>
			<input type="int" class="form-control" asp-for="Id" readonly />
		</div>
		<div class="mt-3">
			<label class="form-label">Name</label>
			<input type="text" class="form-control" asp-for="Name" />
		</div>
		<div class="mt-3">
			<label class="form-label">Producer</label>
			@Html.DropDownList("Producer", ViewBag.Producers, "--Select Producer--", new { @class = "form-control" })
		</div>
		<div>
			<label class="form-label">Category</label>
			<select class="form-control" asp-for="Category">
				<option value="Laptop">Laptop</option>
				<option value="Monitor">Monitor</option>
			</select> 
		</div>
		<div class="mt-3">
			<button type="submit" class="btn btn-primary">Save</button>
			<button type="submit" class="btn btn-danger ms3" asp-action="Delete" asp-controller="laptops">Delete</button>
		</div>
	</form>
}