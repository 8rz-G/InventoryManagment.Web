@model InventoryManagment.Web.Models.Entities.Producer

@if (Model is null)
{
	<p>Laptop not found!</p>
}
else
{
	<form method="post">
		<div class="mt-3">
			<label class="form-label">Id</label>
			<input type="int" class="form-control" asp-for="Id" readonly />
		</div>
		<div class="mt-3">
			<label class="form-label">Date of name</label>
			<input type="text" class="form-control" asp-for="Name" />
		</div>
		<div class="mt-3">
			<button type="submit" class="btn btn-primary">Save</button>
			<button type="submit" class="btn btn-danger ms3" asp-action="Delete" asp-controller="HardwareModels">Delete</button>
		</div>
	</form>
}