@model InventoryManagment.Web.Models.AddLaptopViewModel

<h3>Add new laptop</h3>

<form method="post">
	<div class="mt-3">
		<label class="form-label">AssignedTo</label>
		@Html.DropDownList("AssignedTo", ViewBag.Users, "--Select User--", new { @class = "form-control" })
	</div>
	<div class="mt-3">
		<label class="form-label">Producer</label>
		@Html.DropDownList("Producer", ViewBag.Producers, "--Select Producer--", new { @class = "form-control" })
	</div>
	<div class="mt-3">
		<label class="form-label">Model</label>
		@Html.DropDownList("HardwareModel", ViewBag.hardwareModels, "--Select Model--", new { @class = "form-control" })
	</div>
	<div class="mt-3">
		<a class="btn btn-dark" asp-controller="hardwareModels" asp-action="Add">Add new model</a>
	</div>
	<div class="mt-3">
		<label class="form-label">InStock</label>
		<select class="form-control" asp-for="InStock">
			<option value="True">Yes</option>
			<option value="False">No</option>
		</select>
	</div>
	<div class="mt-3">
		<label class="form-label">SerialNumber</label>
		<input type="text" class="form-control" asp-for="SerialNumber" />
	</div>
	<div class="mt-3">
		<label class="form-label">Date of purchase</label>
		<input type="date" class="form-control" asp-for="DateOfPurchase" />
	</div>
	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>
</form>