@model InventoryManagment.Web.Models.AddLaptopViewModel

<h3>Add new laptop</h3>

<form method="post">
	<div class="mt-3">
		<label class="form-label">AssignedTo</label>
		@Html.DropDownList("AssignedTo", ViewBag.Users, "--Select User--", new { @class = "form-control" })
	</div>
	<div class="mt-3">
		<label class="form-label">Producer</label>
		<input type="text" class="form-control" asp-for="Producer" />
	</div>
	<div class="mt-3">
		<label class="form-label">Model</label>
		<input type="text" class="form-control" asp-for="Model" />
	</div>
	<div class="mt-3">
		<label class="form-label">InStock</label>
		<select class="form-control" asp-for="InStock">
			<option value="True">Tak</option>
			<option value="False">Nie</option>
		</select>
	</div>
	<div class="mt-3">
		<label class="form-label">SerialNumber</label>
		<input type="text" class="form-control" asp-for="SerialNumber" />
	</div>
	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>
</form>